<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="charis.triviality.IntroActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Επιλέξτε επίπεδο δυσκολίας"
        android:textColor="#10a3e9"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Εύκολο"
            android:id="@+id/radioButton"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Μέτριο"
            android:id="@+id/radioButton2"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Δύσκολο"
            android:id="@+id/radioButton3"
            android:checked="false" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"

        android:text="Επιλέξτε λειτουργία"
        android:textSize="20sp"
        android:textColor="#10a3e9"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroupMode">
            <RadioButton
                android:text="Αυτοεκπαίδευση"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selfTrain"
                android:checked="true"/>
            <RadioButton
                android:text="Αυτοεξέταση"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selfTest" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"

            android:text="Επιλέξτε θεματολογία ερωτήσεων"
            android:textSize="20sp"
            android:textColor="#10a3e9"
            android:paddingTop="10dp"
            android:layout_marginTop="20dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroupSubject">
            <RadioButton
                android:text="Δικτυακές Τεχνολογίες"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chknet" />
            <RadioButton
                android:text="Λειτουργικά Συστήματα"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkos" />
            <RadioButton
                android:text="Ασφάλεια της πληροφορίας"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chksec" />
        </RadioGroup>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ξεκινήστε!"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="20dp" />



    </LinearLayout>

</RelativeLayout>
